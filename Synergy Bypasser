Tabs.Bypass:AddParagraph({
    Title = "🔹Chat Bypass🔹",
    Content = "⚠️Enter text to bypass below⚠️"
})

local BypassText = Tabs.Bypass:AddInput("BypassText", {
    Title = "Text To Bypass",
    Default = "",
    Placeholder = "",
    Numeric = false,
    Finished = true,
    Callback = function(Text)
        SendBypass(Text)
    end
});

